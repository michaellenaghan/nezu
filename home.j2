{% from "macros.j2" import render_item %}

{% block style %}
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="{{ static_url }}nezu.css">
{% endblock %}

{% block body %}
  {% include "gh:typlog/nezu/_head.j2" %}
  {% include "gh:typlog/nezu/_site.j2" %}
  <div class="main">
    <div class="inner">
      {% set subjects = query.latest_subjects() %}
      {% for subject in subjects %}
        {{ render_item(site, subject) }}
      {% endfor %}
      <div class="home-more">
        <a href="{{ linkify('/archive/') }}">MORE</a>
      </div>
    </div>
  </div>
  {% include "_snippets/site_foot.j2" %}
  {% include "_snippets/brand_foot.j2" %}
{% endblock %}
